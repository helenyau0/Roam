<!DOCTYPE html>
<form class="" action="/users/<%= userSess.id%>" method="post">
  <div tabindex="-1" role="dialog" class="modal">
    <div role="document" class="modal-dialog">
      <div class="modal-content myModal">
        
        <div class="modal-header">
          <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">Ã—</span></button>
          <h4 class="modal-title">Edit Profile</h4>
        </div>
          
        <div class="modal-body">  
          <div class="form-group">
            <label class="col-sm-2 control-label">Name</label>  
            <div class="col-sm-10">
                <input type="text" name="name" class="form-control"/>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Current City</label>
            <div class="col-sm-10">
              <input type="text" name="current_city" class="form-control"/>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" data-dismiss="modal" class="btn btn-default exit">Close</button>
          <button type="submit" class="btn btn-primary save">Update Profile</button>
        </div>
      </div>
    </div>
  </div>
</form>