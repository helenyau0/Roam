<!DOCTYPE html>
<% include ./header%>
In user's profile page
  <form method="POST" action="/users/photos">
    <input type="hidden" role="uploadcare-uploader" name="content" data-public-key="6b5326acd4ea5f65a9c3" data-images-only required/>
    <input type="submit" value="Upload Photo">
  </form>
  <h1 class="whatever"><%= user.name%></h1>
  <img class="squirtle" src="<%= user.image%>" alt="" style="width:304px;height:228px;">
  <h1><%= user.current_city%></h1>
  <h1><%= user.created_at%></h1>
  <div>
    <% posts.forEach(function(post) { %>
      <li><a href="/posts/<%=post.id%>"><%= post.title%></a></li>
    <% }) %>
  </div>
  <% if (userSess) { %>
    <button type="button" class="btn btn-primary editButton"  data-toggle="modal" data-target="#exampleModal">
      Edit Profile
    </button>
    <form class="" action="/users/<%= userSess.id%>" method="post">
      <div tabindex="-1" role="dialog" class="modal">
        <div role="document" class="modal-dialog">
          <div class="modal-content myModal">
            <div class="modal-header">
              <button type="button" data-dismiss="modal" aria-label="Close" class="close"><span aria-hidden="true">Ã—</span></button>
              <h4 class="modal-title">Edit Profile</h4>
            </div>
            <div class="modal-body">
              <div class="form-group">
                <label class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                  <input type="text" name="name" class="form-control"/>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">Current City</label>
                <div class="col-sm-10">
                  <input type="text" name="current_city" class="form-control"/>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" data-dismiss="modal" class="btn btn-default exit">Close</button>
              <button type="submit" class="btn btn-primary save">Update Profile</button>
            </div>
        </div>
      </div>
    </form>
  <% } %>
  <script type="text/javascript" src="/index.js"></script>
  <script type="text/javascript" src="//ucarecdn.com/widget/2.8.2/uploadcare/uploadcare.full.min.js"></script>
