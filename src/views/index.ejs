<% include ./partials/header%>
  
<% if (error) { %>
  <%= error%>
<% } %>

<% if (userSess) { %>
  <% include ./modals/city_pic%>
<% } %>

<main role="main">
  <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <% cities.forEach(function(city) {%>
        <li data-target="#carouselIndicators" data-slide-to="<%=city.id%>" class="active"></li>
      <%})%>
    </ol>
    <div class="carousel-inner">
      <% cities.forEach(function(city) {%>
        <div class="carousel-item">
          <a href='/cities/<%=city.name%>'>
            <img class="city-image" style="height: 500px;" src="<%=city.image%>">
          </a>
          <div class="carousel-caption d-none d-md-block">
            <h1><%= city.name%></h1>
          </div>
        </div>
      <%})%>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="album">
    <div class="container">
      <div class="row">
        <% cities.forEach(function(city) {%>
          <div class="card city-card">
            <a href='/cities/<%=city.name%>'>
              <img style="height: 350px;" src="<%=city.image%>">
            </a>
            <p class="card-text"><%= city.name%></p>
          </div>
        <%})%>
      </div>
    </div>
  </div>
</main>



