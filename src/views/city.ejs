<% include ./partials/header%>

<div class="container">
  <div class="d-flex justify-content-center">
    <div class="p-2">
      <% if(userSess) {%>
        <button type="button" class="btn btn-primary"  data-toggle="modal" data-target=".add-button">Add New Post</button>
        <% include ./modals/posts_add%>
      <%}%>
    </div>
    <div class="p-2">
      <h3>Pages:
        <% if (pages > 1) { %>
          <a href='/cities/<%=city.name%>?pages=<%= pages-1 %>'>&laquo</a>
        <% } else { %>
          <a href='/cities/<%=city.name%>?pages=<%= pages+1 %>'> &raquo</a>
        <% } %>
      </h3>
    </div>
  </div>
  
  <div class="d-flex justify-content-center city-posts">
    <div class="col offset-md-2">
      <% include ./lists/posts%>
    </div>
  </div>
</div>

