<!DOCTYPE html>
  <% if(userSess.id === user.id) { %>
    <% include ../modals/user_pic %>
  <%} %>
  <div class="card user-card" style="width: 22rem;">
    <img class="card-img-top card-image" src="<%= user.image%>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-margin"><%= user.name%></h5>
      <p class="card-text">Current city: <%= user.current_city%></p>
      <p class="card-text">Join date: <%= user.created_at.toString().slice(0, 15) %></p>
      <% if (userSess.id === user.id) { %>
        <button type="button" class="btn btn-primary card-margin" data-toggle="modal" data-target=".edit-button">
            Edit Profile
        </button>
      <% } %>
    </div>
  </div>


